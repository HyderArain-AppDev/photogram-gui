    <h1><%=@user.username%></h1>

<dl>
  <dt>ID</dt>
  <dd><%=@user.id%></dd>

  <dt>Edit user</dt>
  <dd>
    <form action="/update_user/<%=@user.id%>" >
      <label for="browser_username">Username</label>
      <input id="browser_username" type="text" name="input_username" placeholder="Enter a username..." value="<%=@user.username%>">

      <button>Update user</button>
    </form>
  </dd>
</dl>

<h2>Own photos (<%=@user.own_photos.count%>)</h2>

<table border="1">
  <tr>
    <th>
      Image
    </th>

    <th>
      Owner
    </th>

    <th>
      Caption
    </th>

    <th>
      Posted
    </th>

    <th></th>
  </tr>
  <%@user.own_photos.each do |my_photo|%>
    <tr>
      <td>
        <img src="<%=my_photo.image%>">
      </td>
      <td>
        <%=my_photo.poster.username%>
      </td>
      <td>
        <%=my_photo.caption%>
      </td>
      <td>
        <%=my_photo.created_at%>
      </td>
      <td>
        <a href="/photos/<%=my_photo.id%>">Show details</a>
      </td>
    </tr>
  <%end%>


</table>

